#!/bin/bash
set -e

if [ ! -d gpg-mailgate ]
then
	git clone https://github.com/ajgon/gpg-mailgate.py gpg-mailgate
fi

if [ "$1" == "TOP" ]
then
	mkdir -p mmail
	pushd mmail 2>/dev/null
	ln -sf ../../../etc .
	ln -sf ../../../perl .
	ln -sf ../../../sh .
	ln -sf ../../../doc .
else
	git clone ${HOME}/mmail
	cd mmail
	git checkout $1
fi

